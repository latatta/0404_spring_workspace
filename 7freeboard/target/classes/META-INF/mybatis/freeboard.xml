<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.idev.mapper.FreeboardMapper"> <!-- namespace : mybatis-spring에서는 매퍼 인터페이스로 지정 -->

	<select id="getPagelist" parameterType="Map" resultType="Freeboard">
		SELECT * FROM (
		SELECT rownum AS R, T.* FROM
		(SELECT * FROM FREEBOARD f ORDER BY idx DESC) T)
		WHERE R BETWEEN #{startNo} AND #{endNo}
	</select>

	<select id="getCount" resultType="int">
		SELECT count(*) FROM freeboard
	</select>
</mapper>








